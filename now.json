{
    "version": 2,
    "cleanUrls": true,
    "trailingSlash": false,
    "env": {
        "DB_URL": "@mongo"
    },
    "rewrites": [
        {
            "source": "/api/:user",
            "destination": "/api/[user]"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}